<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c296b5a3aa329c68fd4691d7d58fc818"
    android:backgroundTintMode="src_atop"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/audiowide"
        android:rotationX="31"
        android:text="KNOWLEDGE GAME"
        android:textColor="#FFC400"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/audiowide"
        android:text="Bring your knowledge to the test!"
        android:textAlignment="center"
        android:textColor="#00FFF2"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvTitle" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/BtnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:text=" Έναρξη Παιχνιδιού"
        android:textColor="#FFC400"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/actor"
        app:cornerRadius="8dp"
        app:backgroundTint="#009999"
        app:rippleColor="#80FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TvTitle"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/ivBulb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="75dp"
        android:contentDescription="Bulb"
        android:scaleType="fitCenter"
        android:src="@drawable/bulb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BtnStart" />


    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:inputType="textMultiLine"
        android:text="Ανάπτυξη:\nΚαϊταντζίδης Δημήτρης\nΚατσαρού Αναστασία\nΖερβουδάκης Χαρίλαος"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFC400"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnStart" />

</androidx.constraintlayout.widget.ConstraintLayout>
