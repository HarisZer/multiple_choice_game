<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c296b5a3aa329c68fd4691d7d58fc818"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:text="Στοιχεία Εξεταζόμενου"
        android:textColor="#B3E1FA"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9100"
        android:gravity="center_vertical"
        android:hint="Όνομα"
        android:backgroundTintMode="src_in"
        android:padding="12dp"
        android:textColor="#00B0FF"
        android:textColorHint="#64CCF8FD"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/EtAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9100"
        android:hint="Αριθμός Μητρώου (προαιρετικό)"
        android:backgroundTintMode="src_in"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#00B0FF"
        android:textColorHint="#64CCF8FD" />

    <EditText
        android:id="@+id/NbAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9100"
        android:hint="Ηλικία"
        android:backgroundTintMode="src_in"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="#00B0FF"
        android:textColorHint="#64CCF8FD" />


    <Button
        android:id="@+id/BtnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ξεκίνα Τεστ"
        app:cornerRadius="8sp" />
</LinearLayout>